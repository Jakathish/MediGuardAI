<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2536"
    tools:context=".ScanActivity">

    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="@drawable/camera_preview_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="3:4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Preview"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/scanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Medicine"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/scanSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Point your camera at the medicine box or barcode to instantly analyze safety."
        android:textColor="#B0B3B8"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/scanTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startScanningButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#2563EB"
        android:text="Start Scanning"
        app:icon="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanSubtitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enterManuallyButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Enter Manually"
        android:backgroundTint="#303A4B"
        app:icon="@drawable/ic_keyboard"
        app:layout_constraintTop_toBottomOf="@+id/startScanningButton"
        app:layout_constraintStart_toStartOf="@+id/startScanningButton"
        app:layout_constraintEnd_toEndOf="@+id/startScanningButton"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/viewScanHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Scan History"
        android:textColor="#B0B3B8"
        android:drawableStart="@drawable/ic_history"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/enterManuallyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>